<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.avielniego.openhvr.ui.restaurantDetails.RestaurantDetailsFragment">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="right"
                  android:orientation="horizontal"
                  android:padding="5dp">

        <LinearLayout android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="3"
                      android:gravity="right"
                      android:orientation="vertical">

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:gravity="right"
                          android:orientation="horizontal">

                <TextView android:id="@+id/is_open"
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_weight="1"/>

                <TextView
                    android:id="@+id/restaurant_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4.5"
                    android:alpha="0.84"
                    android:gravity="right"
                    android:textAppearance="?android:textAppearance"
                    android:textSize="22sp"/>

            </LinearLayout>

            <TextView android:id="@+id/restaurant_type"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:alpha="0.84"
                      android:textAppearance="?android:textAppearance"
                      android:textSize="18sp"/>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:gravity="right"
                          android:orientation="horizontal">

                <TextView android:id="@+id/restaurant_distance"
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_weight="1"
                          android:alpha="0.54"
                          android:paddingLeft="2dp"
                          android:paddingRight="2dp"
                          android:textAppearance="?android:textAppearance"
                          android:textSize="14sp"/>

                <TextView android:id="@+id/restaurant_address"
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_weight="3"
                          android:alpha="0.54"
                          android:textAppearance="?android:textAppearance"
                          android:textSize="14sp"/>
            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:padding="10dp">

            <ImageView
                android:id="@+id/restaurant_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </FrameLayout>
    </LinearLayout>

</FrameLayout>
